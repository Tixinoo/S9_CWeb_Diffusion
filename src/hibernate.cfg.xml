<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="connection.driver_class">org.gjt.mm.mysql.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/diffusion</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"/>
    <property name="show_sql">true</property>
    <!-- Drop and re-create the database schema on startup -->
    <property name="hbm2ddl.auto">create</property>
    <!-- Mapping files -->
    <mapping resource="entity/abonne.hbm.xml"/>
    <mapping resource="entity/message.hbm.xml"/>
    <mapping resource="entity/annuaire.hbm.xml"/>
    <mapping resource="entity/entreprise.hbm.xml"/>
    <mapping resource="entity/particulier.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
